@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>操作成功</title>
    <style>
        html,body{
            background-color:#EEE;
        }
        .succ-container {
            position:absolute;
            top:50%;
            left:50%;
            width:600px;
            height:300px;
            margin-left:-300px;
            margin-top:-250px;
            border:1px solid #CCC;
            background-color:white;
            text-align:center;
            padding-top:100px;
            color:#449d44;
            font-size:13px;
        }
        p.link a{
            color:#0B98C3;
            font-weight:normal;
            font-size:13px;
            cursor:pointer;
        }
        p.link a:hover{
            color:red;
            text-decoration:underline;
        }
    </style>
</head>
<body>
    <div class="succ-container">
        <img src="~/images/check.png" />
        <br /><br />
        <p>
            @ViewData["Message"]
        </p>
        <p>
            <span style="color:red;" id="min">5</span>秒后关闭窗口
        </p>
        <p class="link">
            【<a href="/Page/WorkItemList" target="_self">待办列表</a>】
            【<a href="/Page/WorkItemList_Copy" target="_self">已办列表</a>】
            【<a href="/Page/WorkItemList_Copy_Copy" target="_self">知会列表</a>】
            【<a href="/Page/NewFlow" target="_self">发起流程</a>】
        </p>
    </div>
    <script src="/Scripts/jquery-1.8.2.js"></script>
    <script>
        var cmin = 5;
        $(function () {
            setInterval(function () {
                //要执行的代码
                cmin -= 1;
                if (cmin >= 0) {
                    $("#min").text(cmin);
                }
                else
                {
                    $("#min").parent().html("窗口无法关闭");
                }
            }, 1000);
            setTimeout("window.opener=null;window.close()", 5000);
        });
    </script>

</body>
</html>
