<?xml version="1.0" encoding="UTF-8"?>
<log4net>
  <!-- 调试类 -->
  <appender name="debugRollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <encoding type="System.Text.UTF8Encoding"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <file type="log4net.Util.PatternString" value="d:\logs\oa\" />
    <staticLogFileName value="false"/>
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd/'debug-'yyyyMMdd'.log'" />
    <layout type="Swj.Infrastructure.Tools.Logging.JsonPatternLayout, Swj.Infrastructure.Tools">
      <conversionPattern value="%date, %level, %syscode, %pid, %ip, %message" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="WARN" />
    </filter>
  </appender>
  <!-- 错误类 -->
  <appender name="errorRollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <encoding type="System.Text.UTF8Encoding"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <file type="log4net.Util.PatternString" value="d:\logs\oa\" />
    <staticLogFileName value="false"/>
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd/error-yyyyMMdd'.log'" />
    <layout type="Swj.Infrastructure.Tools.Logging.JsonPatternLayout, Swj.Infrastructure.Tools">
      <conversionPattern value="%date, %level, %syscode, %pid, %ip, %message, %exception" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="ERROR" />
      <param name="LevelMax" value="FATAL" />
    </filter>
  </appender>
  
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="dlllogs\app.log" />
    <appendToFile value="true" />
    <maximumFileSize value="1024KB" />
    <maxSizeRollBackups value="30" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>


  
  
  <appender name="OutputDebugStringAppender" type="FoxOne.Core.OutputWindowOuter" >
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="all"/>
    <appender-ref ref="errorRollingFileAppender"/>
    <appender-ref ref="debugRollingFileAppender"/>
    <appender-ref ref="OutputDebugStringAppender"/>
    <appender-ref ref="RollingFileAppender"/>
  </root>
</log4net>